<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogBounceAnimation">
        <item name="android:windowEnterAnimation">@anim/bounce</item>
        <item name="android:windowExitAnimation">@anim/bounce_exit</item>
        Log.d("DialogTest", "Window animation: " + dialog.getWindow().getAttributes().windowAnimations);
