<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái nhấn (pressed) -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Viền cam ngoài cùng -->
            <item android:left="20dp" android:right="20dp" android:top="20dp" android:bottom="20dp">
                <shape android:shape="oval">
                    <solid android:color="#FFC107" /> <!-- Màu cam đậm hơn khi nhấn -->
                </shape>
            </item>
            <!-- Nền xanh ở trong -->
            <item android:left="25dp" android:right="25dp" android:top="25dp" android:bottom="25dp">
                <shape android:shape="oval">
                    <solid android:color="#00BCD4" /> <!-- Màu xám nhạt khi nhấn -->
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <bitmap android:src="@drawable/hepper_background_image"></bitmap>
    </item>
</selector>
